@page
@model MeuPensamento.Pages.MeusPensamentos.DetalhesPensamentoModel
@{
}

@section Css {
<link rel="stylesheet" href="~/css/meuspensamentos/main.css" asp-append-version="true" />

}

<hr class="linha" />
<h6>Meus Pensamentos</h6>
<div class="pensamento-detalhe-container">
    <span class="data">@Model.DataHora.ToString("dd/MM/yyyy") - Resumo</span>
    <div class="pensamento-card">
        <span class="pensamento">
            "@Html.Raw(Model.Pensamento)"
        </span>
        <hr />
        <span class="label">Situação</span>
        <span class="informacao">
            @Html.Raw(Model.Situacao)
        </span>
        <span class="label mt-1">Sentimentos</span>
        <span class="informacao">
            @Html.Raw(Model.Sentimento)
        </span>
        <div class="pensamento-card-footer">
            <a data-bs-toggle="modal" data-bs-target="#modalArquivmento">
                <i class="fa-solid fa-folder"></i>
            </a>
            @Model.DataHora.ToString("HH:mm")
        </div>
    </div>
</div>
<form method="post">
    <div class="button-container container">
        <button class="button" asp-page-handler=Voltar>
            <span class="button-text">Voltar</span>
        </button>
    </div>
    <input type="hidden" asp-for=Id/>
    <div class="modal fade modal-arquivamento" id="modalArquivmento" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span>Você deseja arquivar esse pensamento? Se arquivar não poderá desfazer a ação...</span>
                </div>
                <div class="modal-footer">
                    <button class="button" data-bs-dismiss="modal" asp-page-handler=Arquivar asp-route-id=Id> <span class="button-text">OK</span></button>
                </div>
            </div>
        </div>
    </div>
</form>