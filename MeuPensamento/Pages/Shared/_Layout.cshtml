<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MeuPensamento</title>
    @await RenderSectionAsync("Css", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeuPensamento.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Verdana&display=swap" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="~/lib/fontawesome/css/brands.css" rel="stylesheet">
    <link href="~/lib/fontawesome/css/solid.css" rel="stylesheet">
</head>
<body>
    <div class="body-container">
        <header>
            <div class="logo-header"></div>
            <div class="navbar-container">
                <span class="nav-title">Minha Jornada Pessoal</span>
                <nav class="navbar ">
                    <div class="container">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <i class="fa-solid fa-bars"></i>
                        </button>
                        <div class="navbar-collapse collapse justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-white " asp-area="" asp-page="/Index">Início</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/MeusPensamentos/MeusPensamentos">Meus Pensamentos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/MeusCartoes/MeusCartoes">Meus Cartões</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Configuracoes">Configurações</a>
                                </li>
                                <li class="nav-item nav-sair">
                                    <a class="nav-link text-white" asp-page-handler=SingOut>Sair</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)

        @if (!string.IsNullOrWhiteSpace(@Model.AlertMsg))
        {
            <script type="text/javascript">
                $(document).ready(() => {
                    alert('@Html.Raw(Model.AlertMsg)');
                });
            </script>
        }
    </div>
</body>
</html>


